<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rootlayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.matictechnology.shrijagdishmandir.Activity.ActivityProfile"
    tools:showIn="@layout/activity_profile">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:id="@+id/view"
            android:background="#FF8000"
            android:layout_width="match_parent"
            android:layout_height="170dp"/>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="25dp"
                android:paddingLeft="15dp"
                android:orientation="horizontal">
                <ImageView
                    android:src="@drawable/user"
                    android:layout_width="60dp"
                    android:layout_height="60dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/profile_name"
                        android:paddingTop="20dp"
                        android:paddingLeft="10dp"
                        android:textSize="20dp"
                        android:text="first last name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:paddingTop="5dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:src="@drawable/mobile"
                            android:layout_width="25dp"
                            android:layout_height="25dp" />
                        <TextView
                            android:id="@+id/profile_mobile"
                            android:paddingLeft="10dp"
                            android:textSize="17dp"
                            android:text="mobile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:paddingTop="5dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:src="@drawable/email"
                            android:layout_width="25dp"
                            android:layout_height="25dp" />
                        <TextView
                            android:id="@+id/profile_email"
                            android:paddingLeft="10dp"
                            android:textSize="17dp"
                            android:text="email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <ScrollView
            android:id="@+id/sv"
            android:layout_below="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:layout_above="@+id/l1"
            android:paddingRight="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingTop="25dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:src="@drawable/blood"
                        android:layout_width="25dp"
                        android:layout_height="25dp" />
                    <TextView
                        android:id="@+id/profile_blood"
                        android:paddingLeft="10dp"
                        android:textSize="17dp"
                        android:text="blood group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingTop="25dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:src="@drawable/village"
                        android:layout_width="25dp"
                        android:layout_height="25dp" />
                    <TextView
                        android:id="@+id/profile_village"
                        android:paddingLeft="10dp"
                        android:textSize="17dp"
                        android:text="Village"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingTop="25dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:src="@drawable/tehsil"
                        android:layout_width="25dp"
                        android:layout_height="25dp" />
                    <TextView
                        android:id="@+id/profile_tehsil"
                        android:paddingLeft="10dp"
                        android:textSize="17dp"
                        android:text="tehsil"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingTop="25dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:src="@drawable/district"
                        android:layout_width="25dp"
                        android:layout_height="25dp" />
                    <TextView
                        android:id="@+id/profile_district"
                        android:paddingLeft="10dp"
                        android:textSize="17dp"
                        android:text="District"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingTop="25dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:src="@drawable/om"
                        android:layout_width="25dp"
                        android:layout_height="25dp" />
                    <TextView
                        android:id="@+id/profile_gotra"
                        android:paddingLeft="10dp"
                        android:textSize="17dp"
                        android:text="Gotra"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
    <com.matictechnology.shrijagdishmandir.Utility.ClipRevealFrame
        android:id="@+id/menu_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/tumblr_primary"
        android:visibility="invisible"
        >
        <!--arc layout to show the different buttons of arc layout-->
        <com.ogaclejapan.arclayout.ArcLayout
            android:id="@+id/arc_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:arc_axisRadius="@dimen/layout_child_offset_tumblr"
            app:arc_origin="center"
            app:arc_radius="@dimen/layout_radius_tumblr"
            >
            <!--iniotially hidden buttons to contain the arc layout buttons-->
            <Button
                android:id="@+id/haridwar"
                android:textSize="10dp"
                style="@style/Item.Tumblr"
                android:background="@drawable/tumblr_orange_oval"
                android:text="HARIDWAR"

                />

            <Button
                android:id="@+id/bhopal"
                android:textSize="10dp"
                style="@style/Item.Tumblr"
                android:background="@drawable/tumblr_green_oval"
                android:text="BHOPAL"
                />

            <Button
                android:id="@+id/awlighat"
                android:textSize="10dp"
                style="@style/Item.Tumblr"
                android:background="@drawable/tumblr_white_oval"
                android:text="AWLIGHAT"
                />

            <Button
                android:id="@+id/omkareshwar"
                android:textSize="9dp"
                style="@style/Item.Tumblr"
                android:background="@drawable/tumblr_grey_oval"
                android:text="Omkareshwar"
                />

            <Button
                android:id="@+id/ujjain"
                android:textSize="10dp"
                style="@style/Item.Tumblr"
                android:background="@drawable/tumblr_blue_oval"
                android:text="Ujjain"
                />

        </com.ogaclejapan.arclayout.ArcLayout>

        <!--center button to be included in the arc layout-->
        <Button
            android:textSize="10dp"
            android:id="@+id/center_item"
            style="@style/Item.Tumblr"
            android:layout_gravity="center"
            android:background="@drawable/tumblr_red_oval"
            android:text="contact us"
            />

    </com.matictechnology.shrijagdishmandir.Utility.ClipRevealFrame>
    <Button
        android:id="@+id/fab"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/tumblr_menu_oval"
        android:text="+"
        android:textColor="@color/white"
        android:textSize="24sp"/>

</RelativeLayout>
